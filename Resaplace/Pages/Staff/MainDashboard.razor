@page "/dashboard"
@attribute [Authorize(Roles = "Staff")]
<h3>Ресторанти</h3>

@foreach (var r in Restaurants)
{
    <a href="/dashboard/@r.Id" class="text-decoration-none text-black">
        <div class="card mb-4">
            <div class="row no-gutters">
                <div class="col-auto">
                    <img src="/images/@r.Images.First().ImagePath" class="img-fluid card-img-custom" alt="@r.Images.First().AltText">
                </div>
                <div class="col">
                    <div class="card-block px-2">
                        <h4 class="card-title mt-5">@r.Name</h4>
                        <p class="card-text mt-5">
                            @r.StreetAddress
                        </p>
                        <p class="card-text mb-5">
                            @r.City
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer w-100 text-muted">
                Маси: @r.TotalTables | Места: @r.TotalSeats
            </div>
        </div>
    </a>
}