@page "/restaurantapplications"
@attribute [Authorize(Roles = "Admin")]

<h3 class="d-inline-block">Заявки за нови ресторанти</h3>
<a href="restaurantapplications/archive" class="h4 float-end">Архив</a>


@if (Applications == null || Applications.Count == 0)
{
    <p>
        Няма текущи заявки.
    </p>
}
else
{
    <div class="row gy-4 mt-1 mb-4">
        @foreach (var appl in Applications)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 col-xxl-4 d-flex align-items-stretch">
                <RestaurantApplicationComponent RestaurantApplication=@appl />
            </div>
        }
    </div>
}